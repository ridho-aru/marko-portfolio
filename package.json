{
  "name": "marko-portfolio",
  "description": "The default Marko starter app with TypeScript",
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "@fontsource-variable/geist": "^5.2.8",
    "@fontsource-variable/geist-mono": "^5.2.7",
    "marko": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@marko/run": "^0.9.3",
    "@marko/run-adapter-static": "^2.0.4",
    "esbuild": "~0.25.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vite": "^5.4.11"
  },
  "private": true,
  "scripts": {
    "dev": "marko-run",
    "build": "marko-run build",
    "preview": "marko-run preview",
    "start": "node --enable-source-maps ./dist/index.mjs",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "vitest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
